// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id           Int        @id @default(autoincrement())
  name         String
  email        String     @unique
  phone        String     @unique
  password     String
  role         UserRole   @default(USER)
  vendor       Vendor?
  profileImage Image?     @relation("UserProfileImage")
  sentMessages Message[]  @relation("SentMessages")
  receivedMessages Message[] @relation("ReceivedMessages")
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model Vendor {
  id           Int       @id @default(autoincrement())
  businessName String
  interests    String?
  userId       Int       @unique
  logo         Image?    @relation("VendorLogo")
  products     Product[]
  orders       Order[]   @relation("VendorOrders")
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Product {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  price       Float
  stock       Int      @default(0)
  vendorId    Int
  images      Image[]  @relation("ProductImages")
  vendor      Vendor   @relation(fields: [vendorId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Order {
  id        Int      @id @default(autoincrement())
  total     Float
  buyerId   Int
  sellerId  Int
  status    String   @default("pending")
  vendor    Vendor   @relation("VendorOrders", fields: [sellerId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Message {
  id         Int      @id @default(autoincrement())
  senderId   Int
  receiverId Int
  body       String
  timestamp  DateTime @default(now())
  sender     User     @relation("SentMessages", fields: [senderId], references: [id], onDelete: Cascade)
  receiver   User     @relation("ReceivedMessages", fields: [receiverId], references: [id], onDelete: Cascade)
}

model Image {
  id         Int      @id @default(autoincrement())
  url        String
  publicId  String
  entityType String
  entityId   Int
  isPrimary  Boolean  @default(false)
  userId     Int?     @unique
  vendorId   Int?     @unique
  productId  Int?
  user       User?    @relation("UserProfileImage", fields: [userId], references: [id], onDelete: Cascade)
  vendor     Vendor?  @relation("VendorLogo", fields: [vendorId], references: [id], onDelete: Cascade)
  product    Product? @relation("ProductImages", fields: [productId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
}
